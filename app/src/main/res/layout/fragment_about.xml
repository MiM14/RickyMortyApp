<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/view_detail_toolbar" />

    <androidx.fragment.app.FragmentContainerView
        android:background="@drawable/ic_about_background"
        android:id="@+id/view_about"
        android:layout_width="0dp"
        android:name="com.moaimar.ricknmortyapp.features.about.presentation.PreferencesAboutFragment"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_toolbar"
        android:elevation="@dimen/elevation_card"
        android:layout_marginHorizontal="@dimen/horizontal_spacing"
        android:layout_marginVertical="@dimen/vertical_spacing"

        />
</androidx.constraintlayout.widget.ConstraintLayout>